################################################
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{yml,yaml}]
indent_size = 2

# Markdown settings
[*.md]
trim_trailing_whitespace = false

# Python specific settings
[*.py]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true